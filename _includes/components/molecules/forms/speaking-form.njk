<div class="boilerform">
  <form name="speaking" action="/submit" method="POST" data-netlify="true">
    <fieldset>
      <legend>Information</legend>

      <label for="name" class="c-label">Your name</label>
      <input id="name" class="c-input-field" type="text" name="name" />

      <label for="email" class="c-label">Your email</label>
      <input id="email" type="email" name="email"  autocapitalize="none" autocorrect="off" class="c-input-field" />

      <label for="org" class="c-label">Name of your organization</label>
      <input id="org" type="text" name="org"  class="c-input-field"/>

    </fieldset>

    <fieldset>
      <legend>Event details</legend>

      <label for="event" class="c-label">Name of the event</label>
      <input id="event" class="c-input-field" type="text" name="event" />

      <label for="website" class="c-label">Website of the event</label>
      <input id="website" class="c-input-field" type="text" name="website" />

      <label for="location" class="c-label">Location of the event</label>
      <input id="location" type="text" name="location" class="c-input-field"/>

      <label for="date" class="c-label">Date of the event</label>
      <input id="date" type="date" name="date"  class="c-input-field"/>

      <label for="description" class="c-label">Description of the event</label>
      <textarea id="description" name="description"  class="c-input-field c-input-field--multiline"></textarea>
    </fieldset>

    <fieldset>
      <legend>Speaking details</legend>

      <label for="people" class="c-label">How many people do you expect to show up?</label>
      <input id="people" class="c-input-field" type="text" name="people" />

      <label for="audience" class="c-label">What is the target audience of the event?</label>
      <input id="audience" class="c-input-field" type="text" name="audience" />

      <label for="commercial" class="c-label">Is this a commercial event?</label>
      <div class="c-select-field">
          <select name="commercial" id="commercial" class="c-select-field__menu">
              <option>Type of event</option>
              <option value="commercial">Business</option>
              <option value="profit">Non-profit</option>
              <option value="educational">Education</option>
          </select>
          <span class="c-select-field__decor" aria-hidden="true" role="presentation">&dtrif;</span>
      </div>


      <label for="public" class="c-label">Is this a public event?</label>
      <div class="c-select-field">
          <select name="public" id="public" class="c-select-field__menu">
              <option>Public or private?</option>
              <option value="private">Private</option>
              <option value="public">Public</option>
          </select>
          <span class="c-select-field__decor" aria-hidden="true" role="presentation">&dtrif;</span>
      </div>

      <label for="expenses" class="c-label">Are you covering my travel expenses?</label>
      <div class="c-select-field">
          <select name="expenses" id="expenses" class="c-select-field__menu">
              <option value="Yes">Yes</option>
              <option value="No">No</option>
              <option value="Partially">Partially</option>
          </select>
          <span class="c-select-field__decor" aria-hidden="true" role="presentation">&dtrif;</span>
      </div>

    </fieldset>

    <fieldset>
      <legend>Presentation</legend>

      <label for="format" class="c-label">Presentation format</label>
      <div class="c-select-field">
          <select name="format" id="format" class="c-select-field__menu">
              <option>Select an item</option>
              <option value="talk">Talk</option>
              <option value="workshop">Workshop</option>
              <option value="interview">Interview</option>
          </select>
          <span class="c-select-field__decor" aria-hidden="true" role="presentation">&dtrif;</span>
      </div>

      <label for="title" class="c-label">Title of presentation or workshop</label>
      <div class="c-select-field">
          <select name="title" id="title" class="c-select-field__menu">
              <option>Select an item</option>
              <option value="time">Make time</option>
              <option value="club">Computer Club</option>
              <option value="interview">Custom talk</option>
          </select>
          <span class="c-select-field__decor" aria-hidden="true" role="presentation">&dtrif;</span>
      </div>

      <label for="custom" class="c-label">Brief description of a custom talk</label>
      <textarea id="custom" name="custom"  class="c-input-field c-input-field--multiline"></textarea>

      <label for="language" class="c-label">Language of the presentation</label>
      <div class="c-select-field">
          <select id="language" name="language" class="c-select-field__menu">
              <option value="en">English</option>
              <option value="nl">Dutch</option>
          </select>
          <span class="c-select-field__decor" aria-hidden="true" role="presentation">&dtrif;</span>
      </div>

      <label for="equipment" class="c-label">Can I use my own equipment?</label>
      <div class="c-select-field">
          <select id="equipment" name="equipentm" class="c-select-field__menu">
              <option value="yes">Yes</option>
              <option value="no">No</option>
          </select>
          <span class="c-select-field__decor" aria-hidden="true" role="equipment">&dtrif;</span>
      </div>

      <label for="duration" class="c-label">How long should the presentation be?</label>
      <input id="duration" class="c-input-field" type="text" name="duration" />

      <label for="notes" class="c-label">Any other questions or notes?</label>
      <textarea id="notes" name="notes"  class="c-input-field c-input-field--multiline"></textarea>

    </fieldset>

    <button class="btn btn-secondary" type="submit">Send speaking request</button>
  </form>
</div>
