<div class="boilerform">
  <form name="interview" action="/submit" method="POST" data-netlify="true">
    <fieldset>
      <legend>Information</legend>

      <label for="name" class="c-label">Your name</label>
      <input id="name" class="c-input-field" type="text" name="name" />

      <label for="email" class="c-label">Your email</label>
      <input id="email" type="email" name="email"  autocapitalize="none" autocorrect="off" class="c-input-field" />

      <label for="org" class="c-label">Name of your organization</label>
      <input id="org" type="text" name="org"  class="c-input-field"/>

    </fieldset>

    <fieldset>
      <legend>Publicaton details</legend>

      <label for="pub-name" class="c-label">Publication name</label>
      <input id="pub-name" class="c-input-field" type="text" name="pub-name" />

      <label for="website" class="c-label">Website of the publication</label>
      <input id="website" class="c-input-field" type="text" name="website" />

      <label for="description" class="c-label">Description of the publication</label>
      <textarea id="description" name="description"  class="c-input-field c-input-field--multiline"></textarea>
    </fieldset>

    <fieldset>
      <legend>Audience details</legend>

      <label for="audience" class="c-label">What is the target audience of the publication?</label>
      <input id="audience" class="c-input-field" type="text" name="audience" />

      <label for="commercial" class="c-label">Is this a commercial publication?</label>
      <div class="c-select-field">
          <select name="commercial" id="commercial" class="c-select-field__menu">
              <option>Type of publication</option>
              <option value="commercial">Business</option>
              <option value="profit">Non-profit</option>
              <option value="educational">Education</option>
          </select>
          <span class="c-select-field__decor" aria-hidden="true" role="presentation">&dtrif;</span>
      </div>
    </fieldset>

    <fieldset>
      <legend>Type</legend>

      <label for="format" class="c-label">Publication format</label>
      <div class="c-select-field">
          <select name="format" id="format" class="c-select-field__menu">
              <option>Select an item</option>
              <option value="interview">Interview</option>
              <option value="podcast">Podcast</option>
          </select>
          <span class="c-select-field__decor" aria-hidden="true" role="presentation">&dtrif;</span>
      </div>

      <label for="language" class="c-label">Language of the publication</label>
      <div class="c-select-field">
          <select id="language" name="language" class="c-select-field__menu">
              <option value="en">English</option>
              <option value="nl">Dutch</option>
          </select>
          <span class="c-select-field__decor" aria-hidden="true" role="presentation">&dtrif;</span>
      </div>

      <label for="notes" class="c-label">Any other questions or notes?</label>
      <textarea id="notes" name="notes"  class="c-input-field c-input-field--multiline"></textarea>

    </fieldset>

    <button class="btn btn-secondary" type="submit">Send request</button>
  </form>
</div>
