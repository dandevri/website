---
layout: layouts/base
---

{% include 'components/molecules/site-header.njk' %}
{% import 'components/atoms/notification.njk' as notification %}

<main class="wrapper" id="main">
  <header class="post">
    {% if tags.includes("archive") %}
      {{ notification.notification
          (
            "ðŸ“¥",
            "Archive",
            "You are looking at a post that is archived, probably because my views have changed or the information in it is outdated."
          )
        }}
    {% endif %}
    <span class="header__date">Written on
      <time datetime="{{ date | htmlDateString }}">{{ date | dayDate }}</time>
    </span>
    <span class="redaction" role="presentation">
      {{ title }}
    </span>
    <h1 class="header__title display">{{ title }}</h1>
    <h2 class="header__subtitle">{{ description }}</h2>
    <span class="header__date">Reading time
      {% readingTime content | safe %}
      mins â– 
      {% wordCount content | safe %}
      words
    </span>
  </header>
  <div class="content post guide">
    {{ content | safe }}
    {% include 'components/atoms/signature.njk' %}
  </div>
  <footer>
    {% include 'components/atoms/biography.njk' %}
    {% include 'components/molecules/tag-list.njk' %}
    {% include 'components/molecules/share.njk' %}
    <!-- {% include 'components/atoms/webmention.njk' %} -->
  </footer>
</main>

<script type="module" src="/scripts/components/scrollspy.js"></script>
