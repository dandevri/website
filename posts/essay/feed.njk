---
permalink: essays/feed.xml
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ metadata.title }}</title>
  <subtitle>{{ metadata.feed.description }}</subtitle>
  <link href="{{ metadata.url }}/feed.xml" rel="self"/>
  <link href="{{ metadata.url }}"/>
  <updated>{{ collections.essay | rssLastUpdatedDate }}</updated>
  <id>{{ metadata.url }}</id>
  <author>
    <name>{{ metadata.author}}</name>
    <email>{{ metadata.mail }}</email>
  </author>
  {%- for essay in collections.essay %}
  {% set absolutePostUrl %}{{ essay.url | url | absoluteUrl(metadata.url) }}{% endset %}
  <entry>
    <title>{{ essay.data.title }}</title>
    <link href="{{ absolutePostUrl }}"/>
    <updated>{{ essay.date | rssDate }}</updated>
    <id>{{ absolutePostUrl }}</id>
    <content type="html">{{ essay.templateContent | htmlToAbsoluteUrls(absolutePostUrl) }}</content>
  </entry>
  {%- endfor %}
</feed>
