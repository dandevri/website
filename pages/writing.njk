<ul class="skip-list">
{% for tag in collections.tagList %}
  {% set tagUrl %}/tags/{{ tag }}/{% endset %}
    <li>
      <a class="skip-item tag" href="{{ tagUrl | url }}">{{ tag }}</a>
    </li>
{% endfor %}
</ul>

<section class="article-list grid grid-l">
    {%- for article in collections.article | reverse -%}
      {% if article.date | year != lastDate | default('0', true) %}
        <h3 class="grid-full">{{ article.date | year}}</h3>
      {% set lastDate = article.date | year %}
    {% endif %}
    {% include 'components/atoms/article.njk' %}
  {%- endfor -%}
</section>
